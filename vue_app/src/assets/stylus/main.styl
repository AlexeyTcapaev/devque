@import "~vuetify/src/stylus/settings/_colors.styl"

// Переменные темы
$body-font-family = "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
$material-light := {
  status-bar: {
    regular: #E0E0E0,
    lights-out: rgba(#fff, .7)
  },
  app-bar: #FFFFFF,
  background: #f1f3f6,
  cards: #FFFFFF,
  chips: {
    background: $grey.lighten-2,
    color: rgba(#000, .87)
  },
  dividers: rgba(#000, .12),
  text: {
    theme: #fff,
    primary: rgba(#000, .87),
    secondary: rgba(#000, .54),
    disabled: rgba(#000, .38),
    link: $blue.darken-2,
    link-hover: $grey.darken-3
  },
  icons: {
    active: rgba(#000, .54),
    inactive: rgba(#000, .38)
  },
  inputs: {
    solo-inverted: rgba(#000, .16),
    solo-inverted-focused: #424242,
    solo-inverted-focused-text: #fff
  },
  buttons: {
    disabled: rgba(#000, .26),
    focused: rgba(#000, .12),
    focused-alt: rgba(#fff, .6),
    pressed: rgba(#999, .4)
  },
  expansion-panels: {
    focus: #EEEEEE
  },
  selection-controls: {
    thumb: {
      inactive: $grey.lighten-5,
      disabled: $grey.lighten-1
    },
    track: {
      inactive: rgba(#000, .38),
      disabled: rgba(#000, .12)
    }
  },
  slider: {
    active: rgba(#000, .38),
    inactive: rgba(#000, .26),
    disabled: rgba(#000, .26),
    discrete: #000
  },
  tabs: {
    active: rgba(#000, .87)
  },
  input-bottom-line: rgba(#000, .42),
  stepper: {
    active: rgba(#fff, 1),
    completed: rgba(#000, 0.87),
    hover: rgba(#000, 0.54)
  },
  table: {
    active: $grey.lighten-4
    hover: $grey.lighten-3
  },
  picker: {
    body: #fff,
    clock: $grey.lighten-2,
    indeterminateTime: $grey.lighten-1,
    title: $grey.lighten-2
  },
  bg-color: #fff
  fg-color: #000
  text-color: #000
  primary-text-percent: .87
  secondary-text-percent: .54
  disabledORhints-text-percent: .38
  divider-percent: .12
  active-icon-percent: .54
  inactive-icon-percent: .38
}

@import "~vuetify/src/stylus/main"
// Свои стили
.title
  width 300px
  margin 0 !important
  height 100%
  display flex
  align-items center
  background-color: #f7f9fa
  border-right 1px #e6e6e6 solid
.logo
  height 100%
  width 62%
  display flex
  align-items center
  justify-content center
  margin 0
  font-size 1.2rem
  .toolbar__title
    margin: 0
.my-nav-item
  color #9d9fa2 !important
  transition unset !important
  border-radius 0
  text-transform none
  font-size 1.1rem
  &:hover
    background-color #f7f9fa !important
  &:hover, &.btn--active
    border-bottom 2px #62cb31 solid
    color #34495e !important
  &.btn--active .btn__content:before, &.btn:focus .btn__content:before, &.btn:hover .btn__content:before
    background-color inherit
